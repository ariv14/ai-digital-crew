{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs24"
    }
  ],
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "firestore.rules",
      "ARCHITECTURE.md",
      "CLAUDE.md",
      "ROADMAP.md",
      "README.md",
      "scripts/**",
      "functions/**",
      ".github/**",
      "pipenode.txt",
      "node_modules/**"
    ],
    "headers": [
      {
        "source": "favicon.png",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000" }]
      },
      {
        "source": "og-image.png",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000" }]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=604800" }]
      }
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/trending",
        "destination": "/index.html"
      },
      {
        "source": "/project",
        "destination": "/project.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
