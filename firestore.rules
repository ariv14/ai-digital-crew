rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /projects/{projectId} {
      allow read: if true;
      allow create: if request.auth != null;

      match /snapshots/{snapshotId} {
        allow read: if true;
        allow write: if false; // Admin SDK only (pipeline writes)
      }
    }
    match /projectsCache/{docId} {
      allow read: if true;
      allow write: if false; // Only pipeline via Admin SDK
    }
    match /searchCache/{cacheId} {
      allow read: if true;
      allow write: if false; // only Cloud Functions (Admin SDK) can write
    }
    match /searchAnalytics/{docId} {
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow read: if false; // analytics are write-only from client
    }
  }
}
